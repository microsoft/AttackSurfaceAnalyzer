{
  "rules": [
    {
      "name": "Privileged ports",
      "desc": "Flag when privileged ports are opened.",
      "flag": "WARNING",
      "resultType": "PORT",
      "clauses": [
        {
          "field": "port",
          "op": "LT",
          "data": [
            "1024"
          ]
        }
      ]
    },
    {
      "name": "Privileged users",
      "desc": "Flag when privileged users are modified.",
      "flag": "WARNING",
      "resultType": "USER",
      "clauses": [
        {
          "field": "Privileged",
          "op": "EQ",
          "data": [
            "True"
          ]
        }
      ]
    },
    {
      "name": "Unsigned binaries",
      "desc": "Flag when unsigned/incorrectly signed binaries are added.",
      "flag": "WARNING",
      "platform": [
        "WINDOWS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "IsExecutable",
          "op": "EQ",
          "data": [
            "True"
          ]
        },
        {
          "field": "SigningStatus",
          "op": "NEQ",
          "data": [
            "Valid"
          ]
        }
      ]
    },
    {
      "name": "SetUid",
      "desc": "Flag UID is set on a file.",
      "flag": "WARNING",
      "platform": [
        "LINUX",
        "MACOS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "SetUid",
          "op": "EQ",
          "data": [
            "True"
          ]
        }
      ]
    },
    {
      "name": "SetGid",
      "desc": "Flag GID is set on a file.",
      "flag": "WARNING",
      "platform": [
        "LINUX",
        "MACOS"
      ],
      "changeTypes": [
        "CREATED",
        "MODIFIED"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "SetGid",
          "op": "EQ",
          "data": [
            "True"
          ]
        }
      ]
    },
    {
      "name": "Executables",
      "desc": "Flag when executables are created.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "IsExecutable",
          "op": "EQ",
          "data": [
            "True"
          ]
        }
      ]
    },
    {
      "name": "Certificates",
      "desc": "Flag when certificates are placed on disk.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "Path",
          "op": "ENDS_WITH",
          "data": [
            ".cer",
            ".der",
            ".crt"
          ]
        }
      ]
    },
    {
      "name": "UPNP Ports",
      "desc": "Universal Plug n' Play. This is probably background noise.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "PORT",
      "clauses": [
        {
          "field": "port",
          "op": "EQ",
          "data": [
            "1900"
          ]
        }
      ]
    },
    {
      "name": "Keystore Files",
      "desc": "Flag when java keystore files are modified.",
      "flag": "INFORMATION",
      "platforms": [
        "LINUX",
        "MACOS",
        "WINDOWS"
      ],
      "resultType": "FILE",
      "clauses": [
        {
          "field": "Path",
          "op": "ENDS_WITH",
          "data": [
            ".keystore"
          ]
        }
      ]
    },
    {
        "name": "Firewall Settings Modified",
        "desc": "Flag when OS X firewall settings are modified.",
        "flag": "WARNING",
        "platforms": [
            "MACOS"
        ],
        "resultType": "FILE",
        "clauses": [
            {
                "field": "Path",
                "op": "EQUALS",
                "data": [
                    "/Library/Preferences/com.apple.alf.plist"
                ]
            }
        ]
    }
  ],
  "meta": {
    "defaultLevels": {
      "PORT": "INFORMATION",
      "FILE": "DEBUG",
      "SERVICE": "INFORMATION",
      "CERTIFICATE": "INFORMATION",
      "USER": "INFORMATION",
      "REGISTRY": "DEBUG",
      "FIREWALL": "INFORMATION"
    }
  }
}