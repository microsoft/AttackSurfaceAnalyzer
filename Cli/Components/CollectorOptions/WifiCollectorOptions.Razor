@inject Microsoft.CST.AttackSurfaceAnalyzer.Cli.AppData appData

<div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="enableWifiCollectionCheckbox" @bind="appData.CollectOptions.EnableWifiCollector" />
            <label class="form-check-label" for="enableWifiCollectionCheckbox">Enable Wi-Fi Collector</label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="enableWifiPasswordCollectionCheckbox" @bind="appData.CollectOptions.GatherWifiPasswords" />
            <label class="form-check-label" for="enableWifiPasswordCollectionCheckbox">Enable Password Collection</label>
        </div>
    </div>
</div>