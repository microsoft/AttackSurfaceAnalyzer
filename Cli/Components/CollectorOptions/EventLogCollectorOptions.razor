@inject Microsoft.CST.AttackSurfaceAnalyzer.Cli.AppData appData

<div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="enableEventLogCollectionCheckbox" @bind="appData.CollectOptions.EnableEventLogCollector" />
            <label class="form-check-label" for="enableEventLogCollectionCheckbox">Enable EventLog Collector</label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="enableVerboseEventLogCollectionCheckbox" @bind="appData.CollectOptions.GatherVerboseLogs" />
            <label class="form-check-label" for="enableVerboseEventLogCollectionCheckbox">Enable Verbose Event Log Collector</label>
        </div>
    </div>
</div>